@model IEnumerable<TodoApi.Models.Item>

    <div class="container p-3">
        <div class="row p-4">
            <div class="col-4">
                <h2 class="text-primary">Tareas</h2>
            </div>
            <div class="col-4">
                <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Agregar Nueva Tarea</a>
            </div>
        </div>

        <br />

        @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tarea</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Id</td>
                        <td width="30%">@item.Tarea</td>
                        <td width="40%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                                <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-warning">Update</a>
                            </div>

                        </td>
                    </tr>
                }
                    </tbody>
                </table>
        } else
            {
                <p>No tienes ninguna tarea</p>
            }
    </div>