@model TodoApi.Models.Item

    <form method="post" asp-action="Create">
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Agregar Tarea</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-12">
                            <label asp-for="Tarea"></label>
                        </div>
                    </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <input asp-for="Tarea" class="form-control" />
                            </div>
                            <div class="col-4">
                                <input type="submit" class="btn btn-info w-75" value="Agregar" />
                            </div>
                            <div class="col-4">
                                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </form>